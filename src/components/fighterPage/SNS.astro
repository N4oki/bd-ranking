---
import { Icon } from "astro-icon";

interface Props {
  sns: {
    twitter: string | null;
    instagram: string | null;
    youtube: string | null;
  };
}

const { sns } = Astro.props;
---

<div
  class="col-span-12 flex flex-col rounded-lg border border-white/5 bg-zinc-700 p-2 md:col-span-4 md:col-start-9 md:row-span-2 md:row-start-1 md:p-4"
>
  <p class="text-md mb-4 font-semibold sm:text-lg">SNS</p>

  <div class="flex flex-col gap-4">
    {
      sns.youtube && (
        <a
          href={sns.youtube}
          target="_blank"
          class="text-md flex flex-row items-center justify-start gap-4 font-semibold sm:text-xl"
        >
          <Icon name="ant-design:youtube-outlined" /> Youtube
        </a>
      )
    }
    {
      sns.twitter && (
        <a
          href={sns.twitter}
          target="_blank"
          class="text-md flex flex-row items-center justify-start gap-4 font-semibold sm:text-xl"
        >
          <Icon name="ant-design:twitter-outlined" /> Twitter
        </a>
      )
    }
    {
      sns.instagram && (
        <a
          href={sns.instagram}
          target="_blank"
          class="text-md flex flex-row items-center justify-start gap-4 font-semibold sm:text-xl"
        >
          <Icon name="ant-design:instagram-outlined" /> Instagram
        </a>
      )
    }
  </div>
</div>

<style>
  [astro-icon] {
    width: 24px;
    height: 24px;
  }
</style>
